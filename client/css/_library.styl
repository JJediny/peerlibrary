@import variables

section.library
  padding-top: 60px

.library-publications

  li.result-item
    cursor move

  li.result-item.ui-sortable-helper
    transition 0

.library-collections
  margin-top 34px


.collections-list
  list-style none
  padding 0

.collection-listing
  background white
  padding 10px 15px
  margin 10px 0 10px 1px
  border-radius 2px
  box-shadow 0 0 0 1px rgba(14,41,57,0.12)
  transition 0.2s

  h3
    margin 0 0 0.2em 0

.collection-listing:hover
  box-shadow 0 0 0 1px rgba(14,41,57,0.12), 0 2px 5px rgba(14,41,57,0.34)

.collection-listing.droppable-active
  box-shadow inset 0 0 0 1px rgba(14,41,57,0.12), inset 0 0 5px rgba(14,41,57,0.34)

.collection-listing.droppable-hover
  background blue

