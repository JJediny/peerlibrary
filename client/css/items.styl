@import 'variables.import'

/* Inline items
=============== */

.inline-item
  position relative
  display inline-block
  box-sizing border-box
  max-width 100%
  font-size 13px
  line-height 25px
  height 24px
  white-space nowrap
  overflow hidden
  text-overflow ellipsis

  .avatar
    display inline-block
    height 100%
    margin-right 0.38em

    &.only-icon::after
      content ""
      display inline-block

    img
      position relative
      z-index 1
      vertical-align top
      padding-right 1px

    &::before
      position absolute
      left 0
      top 50%
      margin -0.4em 0 0
      z-index 0

    &.icon-person::before
      font-size 1.07em

    &.icon-group::before
      font-size 1.53em

  .name
    font-weight bold

.inline-item:hover
  text-decoration none

  .name
    text-decoration underline

/* Catalog items
================ */

.item-list
  list-style none
  padding 0 5px
  margin 0

  .catalog-item
    position relative
    background white
    padding 10px 15px
    margin 10px 0
    border-radius 2px
    box-shadow 0 0 0 1px box-shadow-border
    transition box-shadow 0.2s

    h2
      margin 0 0 0.2em 0

    .link
      display block
      position absolute
      left 0
      right 0
      top 0
      bottom 0

    .actionable
      position relative
      z-index 1

    .edit
      display inline-block
      visibility hidden
      opacity 0

    &:hover
      .edit
        visibility visible
        opacity 1

  .editable-control
    width 100%

  .ui-draggable.catalog-item:hover
  .ui-sortable-handle.catalog-item:hover
    box-shadow 0 0 0 1px box-shadow-border, 0 2px 5px box-shadow-shadow

  .droppable-active
    box-shadow inset 0 0 0 1px rgba(14,41,57,0.12), inset 0 0 5px rgba(14,41,57,0.34)

  .droppable-hover
    background blue

/* Members
========== */

.member-list
  padding 0
  list-style none

  .member
    position relative
    display inline-block
    max-width 100%
    margin 0 10px 10px 0

    .inline-item
      padding-right 24px

    .remove-button
      display block
      position absolute
      right 0
      top 1px
      width 24px
      height 24px
      padding 0
      border none
      background none
      font-size 14px

      &:hover
        color blue-accent
        background none

.read-only.member-list
  .member
    .inline-item
      padding-right 0

    .remove-button
      display none
