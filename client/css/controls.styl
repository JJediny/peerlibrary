@import 'variables.import'

/* Search bar
============= */
.search-bar
  input
    border none
    background none
    font-weight 300

/* Sidebar
========== */
.sidebar
  position relative
  padding 10px
  padding-bottom 30px
  border-left 1px solid #dee7e9

  h3
    font-weight 300

  label
    display block
    margin-bottom 10px
    font-size 0.9em
    font-weight 300

  select
    width 241px

  input, button
    display block
    width 227px
    padding 5px
    font-size 13px
    border 1px solid box-shadow-border
    transition all 0.2s

  input:focus
    border 1px solid #a1b3c2

  button
    padding 6px
    background-color box-shadow-background

  button:hover
    background-color box-shadow-border

  .input-and-button
    input
      border-right none

/* Meta menus and jQuery UI widgets
=================================== */

.meta-menu, .ui-widget
  input, button
    display block
    padding 8px 12px
    border none
    box-sizing border-box
    font-weight 300
    font-size 13px
    transition all 0.2s
    border-radius 2px

  input
    width 100%
    padding 7px
    background-color white

  button
    color white
    background-color rgba(120,120,120,0.9)

  button:hover
    background-color rgba(80,80,80,0.9)

  button.default
    background-color rgba(190, 190, 190, 0.9)

  button.default:hover
    background-color rgba(210, 210, 210, 0.9)

.input-and-button
    input
      border-radius 2px 0 0 2px

    button
      border-radius 0 2px 2px 0

  .toggle-list
    list-style none
    padding 10px
    background-color rgba(120,120,120,0.9)
    border-radius 2px

  .toggle-list-item
    button
      background none
      border none
      border-radius 2px
      color white
      width 100%
      text-align left
      padding 10px 10px 10px 30px
      position relative

    button:hover
      background overlay-translucent

    .toggled:before
      content "âœ“"
      position absolute
      left 0
      width 30px
      text-align center

/* jQuery UI widgets
==================== */

.ui-widget
  border none
  border-radius 2px
  padding 0
  background overlay-translucent
  color white
  font-family "Source Sans Pro", sans-serif
  font-size 14px

  .ui-widget-header
    border 0
    border-radius 2px 2px 0 0
    padding 8px 10px
    background overlay-translucent
    color white
    font-size 1.17em
    font-weight bold

    .ui-state-default
      background transparent

    .ui-state-hover
      color #ccc

  .ui-widget-content
    padding 10px
    margin 0
    color white
    background none

    a
      color white

  .ui-state-default
    border none
    color white
    background rgba(120,120,120,0.9)

  .ui-state-hover
    background rgba(80,80,80,0.9)

  input, button.ui-widget
    font-family "Source Sans Pro", sans-serif
    font-size 13px

  .ui-button-text
    padding 0

  .ui-icon
    background none
    text-indent 0

  .ui-icon-closethick:before
    font-size 14px
    font-family "glyph"
    content '\e803'


.ui-dialog
  .ui-dialog-titlebar
    .ui-dialog-title
      margin 0

  .ui-dialog-buttonpane
    padding-top 0
    border none

    button
      display inline-block
      margin 0 0 0 10px

    button.alternative
      position absolute
      left 0

/* Layouts
========== */

.input-and-button
  display table
  width 100%

  input
    display table-cell
    box-sizing border-box
    width 70%

  button
    display table-cell
    box-sizing border-box
    width 30%