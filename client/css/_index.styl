.statistics
  width auto
  height: auto
  margin 0
  padding 0
  position fixed
  bottom 0
  left 50%
  margin-left -182px
  list-style none

  li
    display inline-block
    float left
    position relative
    text-align center
    width 180px
    height 120px
    margin 0
    padding 20px 0
    vertical-align middle
    border-right 4px solid rgba(40,40,40,0.4)
    .label, .value
      display block
    .label
      font-weight 600
    .value
      font-weight 300
      font-size 80px
    
  li:last-child
    border 0
