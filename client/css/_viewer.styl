@import variables

#viewer
  width 100%
  height 100%
  overflow-x hidden
  position relative
  padding-top 60px

  .display
    height 100%

  .display-page
    position relative
    text-align center
    margin-bottom 20px

  .highlighted, .annotations .annotation:hover
    background-color rgba(255,0,0,0.3)

  .display-page
    canvas
      background rgba(255,255,255,1.0)

/* Meta menu
============ */

.meta-menu
  position fixed
  cursor pointer
  width 28px
  height 22px
  left 20px
  padding 10px
  background #cececf
  border-radius 2px
  z-index 100
  transition 0.2s
  overflow hidden

  a
    color white

  i.icon-menu
    font-size 20px
    color white

  .meta-description
    display none
    color white
    padding 5px

    .authors
      span:after
        content ","

      span:last-child:after
        content ""

.meta-menu:hover
  background rgba(46,46,44,0.5)
  width 300px
  min-height 420px

  .meta-description
    display block

/* Scroller
=========== */

.scroller
  position fixed
  width 48px
  top 120px
  left 20px
  bottom 20px
  z-index 50

  div
    position absolute
    width 100%
    background #eee

  div:hover
    background #666

/* Annotations
============== */

.annotations
  position absolute
  z-index 100
  right 5px
  width 300px

  ul.annotations-list
    list-style none

    li
      background white
      padding 20px
      margin 10px 0
      border-radius 2px
      box-shadow 0 0 0 1px rgba(14,41,57,0.12)
      transition 0.2s

    li:hover
      box-shadow 0 0 0 1px rgba(14,41,57,0.12), 0 2px 5px rgba(14,41,57,0.34)

/* Viewer
========= */

#viewer
  width 100%
  height 100%
  overflow-x hidden
  position relative
  padding-top 60px

  .display
    height 100%

  .display-page
    position relative
    text-align left
    margin-left 60px
    margin-bottom 20px

  .highlighted, .annotations .annotation:hover
    background-color rgba(255,0,0,0.3)

  .loading
    position absolute
    left 50%
    top 50%
    height 10em
    width 10em
    margin-left -5em
    margin-top -5em
    line-height 10em
    background-image url("/packages/pdf.js/pdf.js/web/images/loading-icon.gif")
    background-position 50% 50%
    background-repeat no-repeat
    text-align center

  .display-canvas-loading
    width 400px
    height 400px

/* Text selection
================= */

#viewer
  .display-page canvas
    ::selection
      background rgba(255,255,10,0.3)

    ::-moz-selection
      background rgba(255,255,10,0.3)

  .display-text
    position absolute
    left 0
    top 0
    right 0
    bottom 0
    color #000
    font-family sans-serif
    overflow hidden
    margin-right auto
    margin-left auto

  .display-text > div
    color transparent
    position absolute
    line-height 1
    white-space pre
    cursor text

  .display-text
    .highlight
      margin -1px
      padding 1px
      background-color rgba(180, 0, 170, 0.2)
      border-radius 4px

    .highlight.begin
      border-radius 4px 0px 0px 4px

    .highlight.end
      border-radius 0px 4px 4px 0px

    .highlight.middle
      border-radius 0px

    .highlight.selected
       background-color rgba(0, 100, 0, 0.2)
