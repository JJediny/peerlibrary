@import 'variables.import'

section.index
  margin-top section-margin-top + 10px

  .results-list
    position relative

  .results-count, .no-results, .results-loading
    font-size 16px
    font-weight 300
    margin-bottom 20px

  .search-invitation
    margin-top 250px
    width 100%
    text-align center
    font-size 20px
    font-weight 300

  .results-loading
    text-align center

    /* If loading is the first element, show it left-aligned instead of centered */
    &:first-child
      text-align left

  .load-more
    display block
    margin 0 auto

  .under-development
    opacity 0.5
    margin-top 40px

    .hint
      opacity 1
      font-weight 300
      margin-bottom 20px
