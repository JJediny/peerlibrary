@import variables

/* Results styles
================= */

.results-list
  margin-top 50px

ol.item-list
  list-style none
  padding 5px

  li.result-item
    background white
    padding 20px
    margin 10px 0
    border-radius 2px
    box-shadow 0 0 0 1px rgba(14,41,57,0.12)
    transition 0.2s

  li.result-item:hover
    box-shadow 0 0 0 1px rgba(14,41,57,0.12), 0 2px 5px rgba(14,41,57,0.34)

.abstract
  display none

.article-summary
  .article-summary-data
    display inline-block
    float left
    width 85%

    .authors span::after
      content ","

    .authors span:last-child::after
      content ""

/* Article thumbnail
==================== */

.article-summary
  .article-thumbnail
    float right
    display inline-block
    width 95px
    border 1px solid #c9d0dc
    border-radius 2px

  .article-thumbnail > img
    width 90px
    height auto
    float right

ul.scrubber
  margin 0
  width 95px
  height 125px

  li
    display none
