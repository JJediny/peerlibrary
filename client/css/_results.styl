@import 'variables.import'

/* Results styles
================= */

.results-list
  margin-top 50px

ol.item-list
  list-style none
  padding 5px

  li.result-item
    position relative
    background white
    padding 20px
    margin 10px 0
    border-radius 2px
    box-shadow 0 0 0 1px box-shadow-border
    transition box-shadow 0.2s

    .editable > div:first-child
      width 90%

    .library-menu
      display none
      position absolute
      right 10px
      top 0
      left auto
      width 22px
      padding 10px 0
      border-radius 0 0 2px 2px
      min-height 0

      .library-menu-button:first-of-type
        margin-top 5px

      .icon
        float right
        font-size 16px

    .library-menu:hover
      border-radius 2px
      width 300px
      padding 10px
      right 0

  li.result-item:hover
    box-shadow 0 0 0 1px box-shadow-border, 0 2px 5px box-shadow-shadow

    .library-menu
      display block

.abstract
  display none

.article-summary
  .article-summary-data
    display inline-block
    float left
    width 85%

    .authors span::after
      content ","

    .authors span:last-child::after
      content ""

/* Article thumbnail
==================== */

.article-summary
  .article-thumbnail
    float right
    display inline-block
    width 95px
    border 1px solid #c9d0dc
    border-radius 2px

  .article-thumbnail > img
    width 90px
    height auto
    float right

ul.scrubber
  margin 0
  width 95px
  height 125px

  li
    display none
