@import 'variables.import'

.overlay-active
  /* We prevent scrolling of the page content while overlay is visible */
  overflow hidden

  header, section, footer
    /* WebKit only for now */
    -webkit-filter blur(3px)
    -moz-filter blur(3px)
    -ms-filter blur(3px)
    -o-filter blur(3px)
    filter blur(3px)

.drop-overlay
  position fixed
  width 100%
  height 100%
  overflow-y scroll
  top 0
  left 0
  /* Higher than header */
  z-index 6000
  background white-translucent
  color black
  text-align center

  &::before
    content ''
    display inline-block
    height 100%
    vertical-align middle
    margin-right -0.25em

  .content
    display inline-block
    vertical-align middle
    text-align left

  &.imports-overlay
    .content
      width 70%
      max-width 1000px
      min-width 500px

      h1
        margin-bottom 30px

        &.drop-hint-only
          text-align center

      .importing-files
        list-style none
        padding 0

        .file
          position relative
          width 100%
          height 30px
          margin-bottom 10px

          > *
            display inline-block
            vertical-align middle

          .name
            width 22%
            padding-right 10px
            box-sizing border-box
            white-space nowrap
            text-overflow ellipsis
            overflow hidden

          .progress
            position relative
            width 50%
            height 25px
            line-height 25px
            border 1px solid box-shadow-border
            border-radius 10px
            box-sizing border-box
            overflow hidden
            text-align center

            .status
              position relative
              display inline-block
              vertical-align middle
              z-index 2

            .bar
              position absolute
              left 0
              top 0
              height 100%

            .preprocessing
              background-color debug-blue-background
              z-index 1

            .upload
              background-color debug-blue-border
              z-index 2

          .cancel
            padding-left 10px
            height 30px

            .cancel-button
              position relative
              border 1px solid transparent
              background-color transparent

              .ui-tooltip
                position absolute
                bottom 40px
                left 50%
                width 100px
                margin-left -50px
                opacity 0
                visibility hidden
                transition all 0.5s
                box-sizing border-box

              &:hover
                border-color box-shadow-border

                .ui-tooltip
                  opacity 1
                  visibility visible

          &.finished .progress .bar
            background-color success-green-border

          &.canceled .progress
            background-color warn-yellow-border

            .bar
              background-color warn-yellow-border

          &.errored .progress
            background-color error-red-border

          &::after
            content ''
            clear both

      .hint
        margin-top 30px
        text-align center

        .import
          border none
          background transparent
          padding 0
          color blue-accent
          font-size 14px
          font-style italic

          &:hover
          &:focus
            text-decoration underline
            box-shadow none
