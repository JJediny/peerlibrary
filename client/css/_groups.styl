@import 'variables.import'

section.groups
  margin-top simple-margin-top

.groups-directory
  .directory-title, .search-bar
    display inline-block

  .directory-title
    margin-bottom 0

  .groups-count, .no-groups, .groups-loading
    font-size 16px
    font-weight 300

.groups-list
  list-style none
  padding 0

.group-listing
  background white
  padding 10px 15px
  margin 10px 0 10px 1px
  border-radius 2px
  box-shadow 0 0 0 1px box-shadow-border
  transition box-shadow 0.2s

  h2
    margin: 0 0 0.2em 0

.group-listing:hover
  box-shadow 0 0 0 1px box-shadow-border, 0 2px 5px box-shadow-shadow

.my-groups.sidebar
  box-sizing border-box
  padding 0 0 30px 10px
  margin-top 4px
