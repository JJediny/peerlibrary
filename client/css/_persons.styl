@import 'variables.import'

.person.inline-item.no-user
  .avatar
    opacity 0.3

.person.inline-item
  display inline-block
  white-space nowrap

  .avatar
    min-width 1.1em
    margin-right 1px

.item-list
  .person.catalog-item
    .avatar
      position relative
      float left
      cursor pointer
      display inline-block
      margin 0 15px 10px 0
      transition border-color 0.2s

      img
        border solid 1px box-shadow-border

    &::after
      content ""
      display block
      clear both

    &:hover
      .avatar
        border-color box-shadow-shadow

.sidebar
  .item-list
    .person.catalog-item
      .avatar
        margin-right 10px

        img
          width 24px

      .details
        h2
          line-height 30px
          height 24px
